// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================================
// USER & AUTH
// ============================================================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime? @map("emailverified")
  image         String?
  passwordHash  String?   @map("passwordhash")
  accounts      Account[]
  sessions      Session[]
  createdAt     DateTime  @default(now()) @map("createdat")
  updatedAt     DateTime  @updatedAt @map("updatedat")

  // Subscription
  subscription  Subscription?
  usageLogs     UsageLog[]
  paymentOrders PaymentOrder[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("userid")
  type              String
  provider          String
  providerAccountId String  @map("provideraccountid")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("sessiontoken")
  userId       String   @map("userid")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ============================================================
// SUBSCRIPTION
// ============================================================

model Subscription {
  id                String              @id @default(cuid())
  userId            String              @unique @map("userid")
  user              User                @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Plan details
  planType          String              @default("FREE") @map("plantype") @db.Text
  status            String              @default("TRIALING") @map("status") @db.Text

  // AI Quota (fixed monthly amount for Pro users)
  // You buy API keys with a fixed monthly budget
  monthlyTokens     Int                 @default(0) @map("monthlytokens")   // e.g., 50K or 100K tokens per month
  tokensUsed        Int                 @default(0) @map("tokensused")
  imagesAllowed     Int                 @default(0) @map("imagesallowed")   // e.g., 50 images per month
  imagesGenerated   Int                 @default(0) @map("imagesgenerated")

  // Derived helper
  hasAiAccess       Boolean             @default(false) @map("hasaiaccess")

  // Dates
  trialEndsAt       DateTime?           @map("trialendsat")
  currentPeriodStart DateTime?          @map("currentperiodstart")
  currentPeriodEnd  DateTime?           @map("currentperiodend")
  cancelAtPeriodEnd Boolean             @default(false) @map("cancelatperiodend")

  // Stripe
  stripeCustomerId      String?         @unique @map("stripecustomerid")
  stripeSubscriptionId  String?         @unique @map("stripesubscriptionid")

  createdAt         DateTime            @default(now()) @map("createdat")
  updatedAt         DateTime            @updatedAt @map("updatedat")

  @@map("subscriptions")
}

// ============================================================
// USAGE LOGGING
// ============================================================

model UsageLog {
  id          String    @id @default(cuid())
  userId      String    @map("userid")
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  apiType     String    @map("apitype") @db.Text
  prompt      String?   @db.Text // For analytics and cost tracking

  createdAt   DateTime  @default(now()) @map("createdat")

  @@index([userId, createdAt])
  @@map("usage_logs")
}

// ============================================================
// PAYMENT ORDERS (for domestic payment platforms)
// ============================================================

model PaymentOrder {
  id          String        @id @default(cuid())
  userId      String        @map("userid")
  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  amount      Decimal       @db.Decimal(10, 2)
  method      String        @db.Text
  status      String        @default("PENDING") @db.Text

  transaction String?       @unique // Third-party transaction ID
  outTradeNo  String?       @unique @map("outtradeno") // Our order ID

  createdAt   DateTime      @default(now()) @map("createdat")
  updatedAt   DateTime      @updatedAt @map("updatedat")

  @@index([userId, status])
  @@map("payment_orders")
}
